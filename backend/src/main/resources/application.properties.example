spring.application.name=vaultify
# JWT Secret - MUST be at least 32 characters. Use a strong, random secret in production.
# Generate a secure secret: openssl rand -hex 32
vaultify.jwt.secret=YOUR_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS
vaultify.jwt.expirationMs=86400000

# =============================
# H2 Database Configuration
# =============================
spring.datasource.url=jdbc:h2:mem:vaultifydb
spring.datasource.driverClassName=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
# File upload settings
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
file.upload.directory=uploads

# =============================
# GraphQL Configuration
# =============================
spring.graphql.graphiql.enabled=true
spring.graphql.graphiql.path=/graphiql
spring.graphql.path=/graphql
spring.graphql.cors.allowed-origins=http://localhost:3000,http://localhost:5173
spring.graphql.cors.allowed-methods=GET,POST,OPTIONS
spring.graphql.cors.allowed-headers=*

# =============================
# Swagger/OpenAPI Configuration
# =============================
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operations-sorter=method
springdoc.swagger-ui.tags-sorter=alpha
springdoc.swagger-ui.try-it-out-enabled=true
springdoc.swagger-ui.filter=true
springdoc.swagger-ui.config-url=/v3/api-docs/swagger-config
springdoc.swagger-ui.url=/v3/api-docs
springdoc.packages-to-scan=com.rip.vaultify.controller
springdoc.show-actuator=false

# =============================
# SolarWinds Logging Configuration
# =============================
# SolarWinds endpoint and token (use environment variables in production)
# Set SOLARWINDS_TOKEN environment variable or provide default here
solarwinds.endpoint=https://logs.collector.ap-01.cloud.solarwinds.com/v1/logs
solarwinds.token=${SOLARWINDS_TOKEN:}
solarwinds.application.name=vaultify
solarwinds.enabled=${SOLARWINDS_ENABLED:false}

# Logging configuration
logging.pattern.console=%d{HH:mm:ss.SSS} [%thread] %-5level [%X{correlationId:-}] %logger{36} - %msg%n
logging.level.com.rip.vaultify=DEBUG
logging.level.org.springframework.security=INFO
logging.level.org.springframework.web=INFO
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# =============================
# Rate Limiting Configuration
# =============================
# Authentication endpoints (login/register) - strict limits
ratelimit.auth.requests=5
ratelimit.auth.window=60

# General API endpoints - moderate limits
ratelimit.api.requests=100
ratelimit.api.window=60

# File upload endpoints - conservative limits
ratelimit.upload.requests=30
ratelimit.upload.window=60

